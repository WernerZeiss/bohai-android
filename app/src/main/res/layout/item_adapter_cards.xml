<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="18dp">

    <View
        android:id="@+id/view_divide"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="#eeeeee"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_card_icon"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_divide" />

    <TextView
        android:id="@+id/tv_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black33"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/iv_card_icon"
        app:layout_constraintTop_toTopOf="@id/iv_card_icon"
        tools:text="招商银行" />

    <TextView
        android:id="@+id/tv_card_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black33"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_card_name"
        app:layout_constraintTop_toBottomOf="@id/tv_card_name"
        tools:text="6565656565656565" />
</androidx.constraintlayout.widget.ConstraintLayout>