<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_payselect"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="18dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tv_pay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温馨提示"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_pay_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="请选择支付方式"
        android:textColor="#666666"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/cb_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/pay_selector"
            android:checked="true"
            android:paddingLeft="12dp"
            android:text="余额支付"
            android:textColor="#666666" />

        <CheckBox
            android:id="@+id/cb_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:button="@drawable/pay_selector"
            android:paddingLeft="12dp"
            android:text="购货券支付"
            android:textColor="#666666" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_ff9503_5"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_e5e5e5_5"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>